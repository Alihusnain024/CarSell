<div class="card col-sm-4 mt-custom m-auto">
  <h2 class="card-header">Sign Up</h2>
  <div class="card-body ml-custom">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control w-50" %>
        <%= resource.errors.full_messages_for(:username).join(', ') if resource.errors.include?(:username) %>
      </div>

      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
        <%= resource.errors.full_messages_for(:email).join(', ') if resource.errors.include?(:email) %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-50" %>
        <%= resource.errors.full_messages_for(:password).join(', ') if resource.errors.include?(:password) %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-50" %>
        <%= resource.errors.full_messages_for(:password_confirmation).join(', ') if resource.errors.include?(:password_confirmation) %>
      </div>

        <%= f.submit "Sign up",class: 'btn btn-primary gap-2 col-6 mx-auto mb-3'  %>
    <% end %>
    <%- if controller_name != 'sessions' %>
      <p style="margin-left:50px">You have an account?
        <%= link_to "Log in", new_session_path(resource_name) %></p>
    <% end %>
  </div>

 </div>
</div>


