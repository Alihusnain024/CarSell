<div class="wrapper">
  <h2 class="heading">Sign up</h2>
  <div class="container">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "inputField" %>
        <%= resource.errors.full_messages_for(:username).join(', ') if resource.errors.include?(:username) %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inputField" %>
        <%= resource.errors.full_messages_for(:email).join(', ') if resource.errors.include?(:email) %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "inputField" %>
        <%= resource.errors.full_messages_for(:password).join(', ') if resource.errors.include?(:password) %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "inputField" %>
        <%= resource.errors.full_messages_for(:password_confirmation).join(', ') if resource.errors.include?(:password_confirmation) %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "signUp_button" %>
      </div>
    <% end %>
  </div>

  <div class="login">
    <%- if controller_name != 'sessions' %>
      <p>You have an account?
        <%= link_to "Log in", new_session_path(resource_name) %></p>
    <% end %>
  </div>
</div>
