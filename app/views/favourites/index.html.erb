<% if user_signed_in? %>
  <%= render 'shared/navbar' %> 
<div >
<div class="favorite-title">
<h1 style="text-align: center;">My Favourites Vehicles</h1>
</div>
</div>
<ul>
  <% @favorite_vehicles.each do |favorite| %>
    <div class="card">
  <div class="card-body d-flex justify-content-between">
  <h5 class="card-title"><%= favorite.vehicle.carModel %></h5>
    <p class="card-text"><%= favorite.vehicle.price%> PKR</p>
  </div>
</div>
  <% end %>
</ul>

<% else %>
  <p>Please <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> or <%=link_to "Login", new_user_session_path, :class => 'navbar-link' %></p>
<% end %>