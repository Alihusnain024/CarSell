<% if user_signed_in? %>
  <%= render 'shared/navbar' %> 
<div class="user-form col-sm-6">
  <table class="table table-bordered" style="margin-left: 50px; margin-top: 20px; width:185%">
    <thead>
      <tr>
      <th scope="col">Id</th>
        <th scope="col">City</th>
        <th scope="col">Mileage</th>
        <th scope="col">Car Model</th>
        <th scope="col">Color</th>
        <th scope="col">Engine Capacity</th>
        <th scope="col">Assembly Type</th>
        <th scope="col">Transmission Type</th>
        <th scope="col">Engine Type</th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th> 
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
        <td><%= vehicle.id %></td>
          <td><%= vehicle.city %></td>
          <td><%= vehicle.mileage %></td>
          <td><%= vehicle.carModel %></td>
          <td><%= vehicle.color %></td>
          <td><%= vehicle.engineCapicity %></td>
          <td><%= vehicle.assemblyType %></td>
          <td><%= vehicle.transmissonType %></td>
          <td><%= vehicle.engineType %></td>          
          <td><%= vehicle.price %></td>
          <td><%= vehicle.description%></td>
          <td>
          <%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn btn-primary' %>
          <%= link_to 'Delete', vehicle_path(vehicle), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <button type="button" class="btn btn-secondary">Close</button>
          </td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="pagy_nav_bootstrap" style="margin-left: 270px;"><%== pagy_bootstrap_nav(@pagy).html_safe %></div>

<% else %>
  <p>Please <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> or <%=link_to "Login", new_user_session_path, :class => 'navbar-link' %></p>
<% end %>